#--------------------------------------------------------------------------------------------------------------
#
# Begin tailwind make targets
#
#--------------------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------------------
# tailwind install
#--------------------------------------------------------------------------------------------------------------
tailwind/install:
	npm install

#--------------------------------------------------------------------------------------------------------------
# tailwind initialize
#--------------------------------------------------------------------------------------------------------------
tailwind/init:
	npx tailwindcss init

#--------------------------------------------------------------------------------------------------------------
# tailwind compile
#--------------------------------------------------------------------------------------------------------------
tailwind/compile:
	npx tailwindcss build material/overrides/assets/css/tailwind.css -o docs/assets/css/tailwind-output.css

#--------------------------------------------------------------------------------------------------------------
#
# End tailwind make targets
#
#--------------------------------------------------------------------------------------------------------------
